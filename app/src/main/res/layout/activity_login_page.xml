<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#8d9899">

    <TextView
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:fontFamily="@font/audiowide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SYSOPS "
        android:layout_gravity="center"
        android:gravity="center"></TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sr1">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="Shift Roster "
        android:textColor="@color/black"
        android:textSize="32dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Only for Admin)"
        android:textColor="@color/black"
        android:layout_gravity="center"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <EditText

            android:background="@drawable/custom_et_bg"
            android:layout_marginBottom="@dimen/margin_2"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="@font/audiowide"
            android:id="@+id/email_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:hint="Enter your email"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center">

        </EditText>

        <LinearLayout
            android:background="@drawable/custom_et_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <EditText

                android:textColorHint="@color/hintColor"
                android:textColor="@color/black"

                android:gravity="center"
                android:id="@+id/pass_main"
                android:inputType="textPassword"
                android:hint="Enter your password"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="@dimen/et_height">
            </EditText>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:src="@drawable/eyeclosed"
                android:id="@+id/show_pass"
                app:tint="@color/black"></ImageView>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_login"
            android:fontFamily="@font/audiowide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:text="Log in"
            android:textAlignment="center">

        </Button>





    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMING SOON"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:fontFamily="@font/audiowide"></TextView>






</LinearLayout>